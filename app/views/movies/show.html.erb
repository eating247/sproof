<div class="col-sm-offset-3 col-sm-6">
  <h3 class="text-center"><%= @movie.title %></h3>
  <dl>
    <dt>Release Date</dt>
    <dd><%= display_release_date(@movie.release) %></dd>
    <dt>Storyline</dt>
    <dd><%= @movie.storyline %></dd>
    <%= render partial: 'genre_tags', locals: { genres: @movie.genres } %>
  </dl>

  <div class="btn-group btn-group-justified">
    <a href="<%= @movie.link %>" class="btn btn-default btn-sm">IMDB</a>
    <%= link_to "Edit movie", edit_movie_path(@movie), class: "btn btn-default btn-sm" %>
    <%= link_to "Delete movie", movie_path(@movie), method: :delete, class: "btn btn-default btn-sm" %>
  </div>
</div>
